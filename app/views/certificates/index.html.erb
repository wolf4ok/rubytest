<section id="scroll">
  <div class="container px-5">
    <div class="row gx-5 align-items-center">
      <div class="col-lg-6 order-lg-1">
        <div class="p-5">
          <h1> Certificates </h1>
        </div>
      </div>
    </div>
    <form class="d-flex">
      <input class="form-control me-2" type="search" placeholder="Пошук" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Знайти</button>
    </form>
  </div>
  <div>
    <% @certificates.each do |certificate| %>
      <ul>
        <li>User: <%= link_to certificate.user, edit_certificate_path(certificate) %></li>
        <li>Cert type: <%=  certificate.certs %></li>
        <li>Number: <%=  certificate.number %></li>
        <li>Date: <%=  certificate.data %></li>
        <%= button_to 'Delete', certificate_path(certificate), method: :delete %>
      </ul>
    <% end %>
  </div>
</section>